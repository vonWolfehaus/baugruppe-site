.learn-page section:first-child {
	margin-top: 48px;
}

.learn-page .mdl-card {
	height: auto;
	display: flex;
	flex-direction: column;
}

.learn-page .mdl-card > * {
	height: auto;
}
.learn-page .mdl-card .mdl-card__supporting-text {
	margin: 40px;
	flex-grow: 1;
	padding: 0;
	color: inherit;
	width: calc(100% - 80px);
}
.learn-page.learn-page .mdl-card__supporting-text h4 {
	margin-top: 0;
	margin-bottom: 20px;
}
.learn-page .mdl-card__actions {
	margin: 0;
	padding: 4px 40px;
	color: inherit;
}

.learn-page a,
.learn-page .mdl-card__actions a {
	color: rgb(33,150,243);
	margin: 0;

	&:hover {
		color: inherit;
	}
}

.learn-page .mdl-card__actions a:hover,
.learn-page .mdl-card__actions a:active {
	color: inherit;
	background-color: transparent;
}
.learn-page .mdl-card__supporting-text + .mdl-card__actions {
	border-top: 1px solid rgba(0, 0, 0, 0.12);
}
.learn-page #add {
	position: absolute;
	right: 40px;
	top: 36px;
	z-index: 999;
}

.learn-page .mdl-layout__content section:not(:last-of-type) {
	position: relative;
	margin-bottom: 48px;
}
.learn-page section.section--center {
	max-width: 860px;
}
.learn-page #features section.section--center {
	max-width: 620px;
}
.learn-page section > header {
	display: flex;
	align-items: center;
	justify-content: center;
}

.learn-page section .what-is-image {
	width: 100%;
	height: 240px;
	background: url(../images/e3-480x360.jpg) no-repeat center center;
	background-size: cover;
}

.learn-page section > .section__play-btn {
	min-height: 200px;
}
.learn-page section > header > .material-icons {
	font-size: 3rem;
}
.learn-page section > button {
	position: absolute;
	z-index: 99;
	top: 8px;
	right: 8px;
}
.learn-page section .section__circle {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	flex-grow: 0;
	flex-shrink: 1;
}
.learn-page section .section__text {
	flex-grow: 1;
	flex-shrink: 0;
	padding-top: 8px;
}
.learn-page section .section__text h5 {
	font-size: inherit;
	margin: 0;
	margin-bottom: 0.5em;
}
.learn-page section .section__text a {
	text-decoration: none;
}

.learn-page section .section__circle-container {
	text-align: center;
	min-height: 80px;
}

.learn-page section .section__circle-container > .section__circle-container__circle {
	width: 64px;
	height: 64px;
	border-radius: 32px;
	margin: 8px 0;
}

.learn-page section .section__circle-container > img {
	width: auto;
	height: 64px;
}

.learn-page section.section--footer .section__circle--big {
	width: 100px;
	height: 100px;
	border-radius: 50px;
	margin: 8px 32px;
}
.learn-page .is-small-screen section.section--footer .section__circle--big {
	width: 50px;
	height: 50px;
	border-radius: 25px;
	margin: 8px 16px;
}
.learn-page section.section--footer {
	padding: 64px 0;
	margin: 0 -8px -8px -8px;
}
.learn-page section.section--center .section__text:not(:last-child) {
	border-bottom: 1px solid rgba(0,0,0,.13);
}
.learn-page .mdl-card .mdl-card__supporting-text > h3:first-child {
	margin-bottom: 24px;
}
.learn-page .mdl-layout__tab-panel:not(#overview) {
	background-color: white;
}

.learn-page #features section {
	margin-bottom: 72px;
}

.learn-page #features h4, #features h5 {
	margin-bottom: 16px;
}

.learn-page .toc {
	border-left: 4px solid #C1EEF4;
	margin: 24px;
	padding: 0;
	padding-left: 8px;
	display: flex;
	flex-direction: column;
}

.learn-page .toc h4 {
	font-size: 0.9rem;
	margin-top: 0;
}

.learn-page .toc a {
	color: #4DD0E1;
	text-decoration: none;
	font-size: 16px;
	line-height: 28px;
	display: block;
}

.learn-page .mdl-menu__container {
	z-index: 99;
}
